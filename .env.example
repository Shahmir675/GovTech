# RAGBot-v2 Environment Variables
# Copy this file to .env and fill in your actual values

# ============================================
# Gemini API Configuration
# ============================================
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your_gemini_api_key_here

# ============================================
# Qdrant Cloud Configuration
# ============================================
# Sign up at: https://cloud.qdrant.io/
# Create a cluster and get your credentials
QDRANT_URL=your_qdrant_cloud_url_here
QDRANT_API_KEY=your_qdrant_api_key_here

# Collection name for storing law embeddings
QDRANT_COLLECTION_NAME=kpk_local_govt_act_2013

# ============================================
# Embedding Configuration
# ============================================
# Embedding model for semantic search
# Options: sentence-transformers/all-mpnet-base-v2, sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_MODEL_NAME=sentence-transformers/all-mpnet-base-v2

# Device for embedding computation (cpu, cuda, or mps)
# Leave empty for auto-detection
RAGBOT_EMBED_DEVICE=

# Batch size for embedding generation (default: 64)
RAGBOT_EMBED_BATCH=64

# ============================================
# Retrieval Configuration
# ============================================
# Maximum number of statutory citations per answer (default: 4)
RAGBOT_MAX_CITATIONS=4

# ============================================
# NLP Configuration
# ============================================
# spaCy model for NER (download with: python -m spacy download en_core_web_sm)
SPACY_MODEL=en_core_web_sm

# ============================================
# Re-Ranking Configuration
# ============================================
# Cross-encoder model for result re-ranking (optional)
# Options: cross-encoder/ms-marco-MiniLM-L-6-v2, cross-encoder/ms-marco-MiniLM-L-12-v2
RAGBOT_RERANKER_MODEL=cross-encoder/ms-marco-MiniLM-L-6-v2

# Device for re-ranker (cpu, cuda, or mps)
RAGBOT_RERANKER_DEVICE=
